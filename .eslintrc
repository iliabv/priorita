{
    "extends": "eslint:recommended",
    "env": {
        "browser": true,
        "node": true
    },
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": 6
    },
    "rules": {
        "indent": [2, 4],
        "consistent-return": 2,
        "comma-dangle": 0,
        "no-console": 0
    },
    "globals": {
        "chrome": true,
        "Promise": true
    }
}
